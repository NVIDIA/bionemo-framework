{
	"name": "Standalone Container (NeMo2 + Megatron provided)",
	"runArgs": [
		"--gpus=all"
	],
	"build": {
		"context": "${localWorkspaceFolder}",
		"dockerfile": "${localWorkspaceFolder}/Dockerfile",
		"target": "standalone",
		"cache-from": "nvcr.io/nvidian/cvai_bnmo_trng/bionemo:bionemo2-latest"
	},
	"mounts": [
		// Mount the local ~/.aws config to pass along AWS credentials for PBSS.
		"source=${localEnv:HOME}/.aws,target=/home/bionemo/.aws,type=bind,consistency=cached"
	],
	"postCreateCommand": "pip install --no-deps -e sub-packages/bionemo-fw && pip install --no-deps -e sub-packages/bionemo-contrib",
	"remoteUser": "bionemo",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"eamodio.gitlens",
				"streetsidesoftware.code-spell-checker",
				"ms-azuretools.vscode-docker",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.analysis.extraPaths": [
					"./sub-packages/bionemo-fw/src",
					"./sub-packages/bionemo-core/src",
					"./sub-packages/bionemo-contrib/src"
				],
				"python.pythonPath": "/bin/python3",
				"python.testing.pytestEnabled": true
			}
		}
	}
}
